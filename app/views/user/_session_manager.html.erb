<% if user_signed_in? %>
    <li class="nav-item">
        <%= link_to 'My page',  current_user, class: "nav-link" %>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Actions
        </a>
        <ul class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="navbarDropdown">
            <% if current_user.admin? %>
                <li class="dropdown-item">
                    <%= link_to 'Admin panel',  rails_admin.dashboard_path, class: "nav-link" %>
                </li>
            <% end%>
            <% if current_user.author?%>
                <li class="dropdown-item">
                    <%= link_to 'New Article',  new_article_path, class: "nav-link" %>
                </li>
            <% end%>
            <li><hr class="dropdown-divider"></li>
            <li class="dropdown-item">
                <%= link_to 'Logout', destroy_user_session_path, data: { "turbo-method": :delete } , class: "nav-link" %>
            </li>
        </ul>
    </li>
<% else %>
    <li class="dropdown-item">
        <%= link_to 'Login', user_session_path, class: "nav-link" %>
    </li>
    <li class="dropdown-item">
        <%= link_to 'Sign up', new_user_registration_path, class: "nav-link" %>
    </li>
<% end %>
